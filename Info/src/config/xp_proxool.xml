<?xml version="1.0" encoding="ISO-8859-1"?>
<conn-pool>
	<proxool>
	    <alias>info_slave</alias>
	    <driver-url>jdbc:mysql://127.0.0.1:3306/info?useUnicode=true&amp;characterEncoding=utf-8</driver-url>
	    <driver-class>com.mysql.jdbc.Driver</driver-class>
	    <driver-properties>
	      <property name="user" value="root"/>
	      <property name="password" value="123456"/>
	    </driver-properties>
	    <house-keeping-test-sql>select 0</house-keeping-test-sql>
	    <maximum-connection-count>30</maximum-connection-count>
	    <minimum-connection-count>5</minimum-connection-count>
	    <maximum-connection-lifetime>1440000</maximum-connection-lifetime>
	    <simultaneous-build-throttle>1</simultaneous-build-throttle>
	    <test-before-use>true</test-before-use>
	</proxool>
	<proxool>
	    <alias>info_master</alias>
	    <driver-url>jdbc:mysql://127.0.0.1:3306/info?useUnicode=true&amp;characterEncoding=utf-8</driver-url>
	    <driver-class>com.mysql.jdbc.Driver</driver-class>
	    <driver-properties>
	      <property name="user" value="root"/>
	      <property name="password" value="123456"/>
	    </driver-properties>
	    <house-keeping-test-sql>select 0</house-keeping-test-sql>
	    <maximum-connection-count>10</maximum-connection-count>
	    <minimum-connection-count>2</minimum-connection-count>
	    <maximum-connection-lifetime>1440000</maximum-connection-lifetime>
	    <simultaneous-build-throttle>1</simultaneous-build-throttle>
	    <test-before-use>true</test-before-use>
	</proxool>	
</conn-pool>